<% locals.setLayout('base.ejs') %>
<% locals.block('title', 'Список страниц верстки') %>

<div class="container">
    <div class="player" data-player>
        <audio id="audio" class="player_audio" controls>
            <source src="/audio/Aether - Endeavour.wav" type="audio/wav">
        </audio>
        <div class="player_controls" data-player-controls>
            <button class="player_controls__prev" data-player-controls-prev>
            <button class="player_controls__play" data-player-controls-play>
            <button class="player_controls__next" data-player-controls-next>
        </div>
        <div class="player_timeline" data-player-timeline>
            <div class="player_timeline__passed" data-player-timeline-passed>0:00</div>
            <div class="player_timeline__progressbar_wrapper" data-player-timeline-progressbar>
                <div id="progressbar" class="player_timeline__progressbar" data-player-timeline-progressbar></div>
            </div>
            <div class="player_timeline__duration" data-player-timeline-duration>0:00</div>
        </div>
    </div>
</div>